<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageGroup">

    <Button
        android:id="@+id/group1Button"
        android:layout_width="409dp"
        android:layout_height="48dp"
        android:text="Group 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/group2Button"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:text="Group 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group1Button" />

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="639dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group2Button">

        <TextView
            android:id="@+id/grp1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group 1"
            android:textAlignment="center"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/grp2View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>